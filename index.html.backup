      });

      // Listeners para os selects
      document.querySelectorAll("select").forEach((select) => {
        select.addEventListener("change", calcularOrcamento);
      });

      // Listeners para os checkboxes
      document
        .querySelectorAll('input[type="checkbox"]')
        .forEach((checkbox) => {
          checkbox.addEventListener("change", calcularOrcamento);
        });

      function calcularOrcamento() {
        if (!orcamentoAtual.servico) return;

        const selectId = orcamentoAtual.servico + "Tipo";
        const select = document.getElementById(selectId);

        if (select && !select.disabled) {
          orcamentoAtual.preco = parseInt(select.value);
          orcamentoAtual.tipo = select.options[select.selectedIndex].text;
        }

        // Calcular adicionais
        orcamentoAtual.urgente = document.getElementById("urgente").checked;
        orcamentoAtual.manutencao =
          document.getElementById("manutencao").checked;
        orcamentoAtual.treinamento =
          document.getElementById("treinamento").checked;

        let total = orcamentoAtual.preco;

        // Adicionar custos extras
        if (orcamentoAtual.urgente) {
          total += orcamentoAtual.preco * 0.3;
        }
        if (orcamentoAtual.manutencao) {
          total += 200;
        }
        if (orcamentoAtual.treinamento) {
          total += 150;
        }

        orcamentoAtual.total = total;

        // Atualizar interface
        atualizarResumoOrcamento();
      }

      function atualizarResumoOrcamento() {
        const detalhesDiv = document.getElementById("orcamento-detalhes");
        const totalSpan = document.getElementById("total-preco");

        if (orcamentoAtual.preco === 0) {
          detalhesDiv.innerHTML =
            '<div class="text-gray-400">Selecione um servi√ßo para ver o or√ßamento</div>';
          totalSpan.textContent = "R$ 0,00";
          return;
        }

        let html = `
                <div class="flex justify-between">
                    <span>${orcamentoAtual.tipo}</span>
                    <span>R$ ${orcamentoAtual.preco
                      .toFixed(2)
                      .replace(".", ",")}</span>
                </div>
            `;

        if (orcamentoAtual.urgente) {
          const valorUrgente = orcamentoAtual.preco * 0.3;
          html += `
                    <div class="flex justify-between text-yellow-400">
                        <span>Entrega Urgente (+30%)</span>
                        <span>R$ ${valorUrgente
                          .toFixed(2)
                          .replace(".", ",")}</span>
                    </div>
                `;
        }

        if (orcamentoAtual.manutencao) {
          html += `
                    <div class="flex justify-between text-blue-400">
                        <span>Manuten√ß√£o 6 meses</span>
                        <span>R$ 200,00</span>
                    </div>
                `;
        }

        if (orcamentoAtual.treinamento) {
          html += `
                    <div class="flex justify-between text-green-400">
                        <span>Treinamento inclu√≠do</span>
                        <span>R$ 150,00</span>
                    </div>
                `;
        }

        detalhesDiv.innerHTML = html;
        totalSpan.textContent = `R$ ${orcamentoAtual.total
          .toFixed(2)
          .replace(".", ",")}`;
      }

      function enviarOrcamento() {
        if (orcamentoAtual.total === 0) {
          alert("Selecione um servi√ßo primeiro!");
          return;
        }

        let mensagem = `Ol√°! Gostaria de um or√ßamento:\n\n`;
        mensagem += `üìã Servi√ßo: ${orcamentoAtual.tipo}\n`;
        mensagem += `üí∞ Valor Base: R$ ${orcamentoAtual.preco
          .toFixed(2)
          .replace(".", ",")}\n`;

        if (orcamentoAtual.urgente) {
          mensagem += `‚ö° Entrega Urgente: +30%\n`;
        }
        if (orcamentoAtual.manutencao) {
          mensagem += `üîß Manuten√ß√£o 6 meses: +R$ 200,00\n`;
        }
        if (orcamentoAtual.treinamento) {
          mensagem += `üìö Treinamento inclu√≠do: +R$ 150,00\n`;
        }

        mensagem += `\nüíé TOTAL: R$ ${orcamentoAtual.total
          .toFixed(2)
          .replace(".", ",")}\n\n`;
        mensagem += `Quando podemos conversar sobre os detalhes?`;

        const url = `https://wa.me/5575981231019?text=${encodeURIComponent(
          mensagem
        )}`;
        window.open(url, "_blank");
      }

      function calcularNovamente() {
        // Resetar formul√°rio
        document.querySelectorAll('input[type="radio"]').forEach((radio) => {
          radio.checked = false;
        });
        document
          .querySelectorAll('input[type="checkbox"]')
          .forEach((checkbox) => {
            checkbox.checked = false;
          });
        document.querySelectorAll("select").forEach((select) => {
          select.disabled = true;
        });

        // Resetar objeto
        orcamentoAtual = {
          servico: "",
          tipo: "",
          preco: 0,
          urgente: false,
          manutencao: false,
          treinamento: false,
          total: 0,
        };

        atualizarResumoOrcamento();
      }

      // Smooth scrolling
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute("href"));
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
            });
          }
        });
      });
    </script>
  </body>
</html>
